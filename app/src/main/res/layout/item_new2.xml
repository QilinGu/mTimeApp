<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_item_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="央视揭《捉妖记》造假黑幕"
        android:textColor="#dd000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_item_news2_img1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/img_default_300x200"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_item_news2_img2"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/img_default_300x200"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_item_news2_img3"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/img_default_300x200"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5小时前"
            android:textColor="#66000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_item_news_reviewNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="评论 19"
            android:textColor="#66000000"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/rl_item_news_image"
        android:layout_marginTop="10dp"
        android:background="#33000000" />
</LinearLayout>