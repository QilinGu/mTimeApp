<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_prevue_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_default_300x200" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_prevue_icon"
            android:layout_alignRight="@+id/iv_item_prevue_icon"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/img_play" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_prevue_title"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《三人行》先行版预告片"
            android:textColor="#dd000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_item_prevue_summary"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="警医匪三人自我执念引发危机"
            android:textColor="#dd000000"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>