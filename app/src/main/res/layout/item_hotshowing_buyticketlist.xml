<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/iv_movie_icon"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/movie"/>
    <LinearLayout
        android:id="@+id/ll_movie_info"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/iv_movie_icon"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_movie_title_hotshowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="星球大战，原理觉醒"/>
            <TextView
                android:id="@+id/tv_movie_score_hotshowing"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:textColor="#69a015"
                android:text="7.7"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_movie_des_hotshowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff8702"
            android:textSize="14sp"
            android:text="有一种情怀叫星战"/>
        <TextView
            android:id="@+id/tv_play_date_hotshowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="1月9日上映"/>
        <TextView
            android:id="@+id/tv_release_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="今日157家影院上映2615场"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="15dp">
            <ImageView
                android:id="@+id/iv_3d_hotshowing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rectangle3d"/>
            <ImageView
                android:id="@+id/iv_imax_hotshowing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rectangleimax"/>
            <ImageView
                android:id="@+id/iv_china_larget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rectanglelarget"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_buy_ticket"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="购票"
        android:textColor="#ffffff"
        android:background="@drawable/btn_solid_orange_h80"
        android:layout_alignBottom="@id/iv_movie_icon"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/ll_movie_info"
        android:layout_marginRight="10dp"/>
</RelativeLayout>