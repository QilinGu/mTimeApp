<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/focus_item_tv_date"
                android:layout_width="wrap_content"
                android:text="1月14日"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/focus_item_iv_icon"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:src="@drawable/movie"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/focus_item_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="星球大战，原理觉醒"/>
                <TextView
                    android:id="@+id/focus_item_tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:text="有一种情怀叫星战"/>
                <TextView
                    android:id="@+id/focus_item_tv_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:text="1月9日上映"/>
                <TextView
                    android:id="@+id/focus_item_tv_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:text="今日157家影院上映2615场"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/focus_item_btn_prebuy"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="#ffffff"
                        android:text="超前预售"
                        android:textSize="12sp"
                        android:background="@drawable/btn_solid_green_h58"/>
                    <Button
                        android:layout_marginLeft="5dp"
                        android:id="@+id/focus_item_btn_premovie"
                        android:text="预告片"
                        android:textSize="12sp"
                        android:textColor="#669e10"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/bt_line_green_66"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>