<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_tv_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EBEBEB"/>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#55000000"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/tv_btn_coupon"
            android:text="我的优惠券"
            android:drawableLeft="@drawable/icon_my_home_coupon_45x35"
            style="@style/TextBtnTheme"/>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#55000000"/>

        <RadioButton
            android:id="@+id/tv_btn_movies"
            android:text="我的电影"
            android:drawableLeft="@drawable/icon_my_home_movies_43x43"
            style="@style/TextBtnTheme"/>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#55000000"/>

        <RadioButton
            android:id="@+id/tv_btn_favorite"
            android:text="我的收藏"
            android:drawableLeft="@drawable/icon_my_home_favorites_45x45"
            style="@style/TextBtnTheme"/>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#55000000"/>

        <View android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#EBEBEB"/>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#55000000"/>

        <RadioButton
            android:id="@+id/tv_btn_opinion"
            android:text="意见反馈"
            style="@style/TextBtnTheme"/>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#55000000"/>
        <RadioButton
            android:id="@+id/tv_btn_setting"
            android:text="设置"
            style="@style/TextBtnTheme"/>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#55000000"/>
        <RadioButton
            android:id="@+id/tv_btn_code"
            android:text="扫描二维码"
            style="@style/TextBtnTheme"/>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#55000000"/>
        <RadioButton
            android:id="@+id/tv_btn_help"
            android:text="商城使用帮助"
            style="@style/TextBtnTheme"/>

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#55000000"/>

        <View android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#EBEBEB"/>
    </RadioGroup>

</LinearLayout>